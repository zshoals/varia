{
    //Wtf? Fix for schema issues...toggle this if autocompletion is broken
    "json.schemaDownload.enable": true,

    "workbench.colorTheme": "Verdandi Alter",
    "editor.fontFamily": "'Iosevka SS06', 'Terminus (TTF) for Windows', 'Iosevka SS06',  'Liga Liberation Mono', 'Liberation Mono', 'IntelOne Mono',  Consolas, 'Courier New', monospace",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "Windows PowerShell": {
            "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
        }
    },
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.minimap.enabled": false,
    "breadcrumbs.showFunctions": false,
    "breadcrumbs.symbolPath": "off",
    "window.title": "${dirty}${activeEditorShort}${separator}${separator}${profileName}${separator}",
    "window.menuBarVisibility": "toggle",
    "workbench.editor.showTabs": false,
    "workbench.editor.limit.value": 4,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.enabled": true,
    "editor.bracketPairColorization.enabled": false,
    "kinc.kincPath": "C:/HaxeLibraries/Kinc",
    "extensions.autoUpdate": false,

    "workbench.colorCustomizations": {
        "[Verdandi Alter]": {
            "editorCursor.foreground": "#992d2d",
            "titleBar.activeBackground": "#0f1216",
            "statusBar.background": "#0f1216",
            "scrollbar.shadow": "#ff000000",
        }
    },
    //Firefly Midnight comment override (removes italics)
    "editor.tokenColorCustomizations": {
        "[FireFly Pro Midnight]": {
            "comments": {
                "fontStyle": ""
            }
        },
        "[Verdandi Alter]": {
            "keywords": "#949ca3",
            "numbers": "#949ca3",
            "types": "#949ca3",
            "functions": "#949ca3",
            "variables": "#949ca3",
            "comments": "#ada34d",
            // "comments": "#62886e", old color original -> #6f879e
            "textMateRules": [
                {
                    "scope": [
                        "keyword",
                        "keyword.operator",
                        "keyword.other",
                        "keyword.control",
                        "keyword.operator.new",
                        "entity.other.inherited-class",
                        "storage.type",
                        "storage.modifier",
                        "constant.character.escape",
                        "constant.other",
                        "constant.numeric.hex",
                        "constant.numeric.integer",
                        "constant.numeric.octal",
                        "variable",
                        "support.variable",
                        "meta.cast",
                        "meta.preprocessor",
                        // "meta.preprocessor string",
                        "entity.name.scope-resolution.cpp",
                        "constant.language",
                    ],
                    "settings": {
                        "foreground": "#949ca3",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": [
                        "comment",
                        "comment.block",
                        "comment.line",
                    ],
                    "settings": {
                        // "foreground": "#62886e",
                        "foreground": "#ada34d",
                        "fontStyle": "bold"
                    }
                },
                {
                    "scope": [
                        "string",
                    ],
                    "settings": {
                        "foreground": "#62886e",
                        // "foreground": "#6f879e",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": [
                        "keyword.other.unit",
                        "meta.encoding.cpp",
                    ],
                    "settings": {
                        "foreground": "#cfcc8a",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": [
                        "storage.type.struct.cpp",
                        "storage.type.class.cpp",
                        "storage.type.enum.enum-key.class.cpp",
                        "storage.type.enum",
                    ],
                    "settings": {
                        "foreground": "#9e906b",
                        "fontStyle": ""
                    }
                },
            ]
        },

    },


    "vim.leader": " ",
    "vim.insertModeKeyBindings": [
        //Escape
        {
            "before": ["k", "j", "<leader>"],
            "after": ["<esc>"]
        },
    ],


    //NOTE("): Don't do this, this causes problems in visual mode
    // "vim.visualModeKeyBindings": [
    //     //Escape
    //     {
    //         "before": ["k", "j", "<leader>"],
    //         "after": ["<esc>"]
    //     },
    // ],

    "vim.visualModeKeyBindings": [
        //Center screen on page up
        {
            "before": ["C-u"],
            "after": ["C-u", "z", "z"]
        },
        //Center screen on page down
        {
            "before": ["C-d"],
            "after": ["C-d", "z", "z"]
        },
    ],

    "vim.normalModeKeyBindings": [
        //Gap down
        {
            "before": ["<leader>", "j"],
            "after": ["o", "<esc>"]
        },
        //Gap up
        {
            "before": ["<leader>", "k"],
            "after": ["O", "<esc>"]
        },
        //Gap Around
        {
            "before": ["<leader>", "g"],
            "after": ["m", "t", "y", "y", "p", "p", "`", "t", "j", "m", "t", "k", "S", "<esc>", "j", "j", "S", "<esc>", "`", "t"]
        },

        //Search number
        {
            "before": ["<leader>", "<leader>", "w"],
            "after": ["/", "[", "0", "-", "9", "]", "\\", ">", "<enter>"]
        },
        //Search any bracket
        {
            "before": ["<leader>", "<leader>", "s"],
            "after": ["/", "[", "[", "{", "(", "<", ">", "\\", "]", "}", ")", "\"", "'", "]", "<enter>"]
        },
        //Search for curly brackets
        {
            "before": ["<leader>", "<leader>", "r"],
            "after": ["/", "[", "{", "}", "]", "<enter>"]
        },
        //CamelCaseMotion overrides
        {
            "before": ["w"],
            "after": ["<leader>", "w"]
        },
        //CamelCaseMotion overrides
        {
            "before": ["b"],
            "after": ["<leader>", "b"]
        },
        //CamelCaseMotion overrides
        {
            "before": ["e"],
            "after": ["<leader>", "e"]
        },
        //Center screen on page up
        {
            "before": ["C-u"],
            "after": ["C-u", "z", "z"]
        },
        //Center screen on page down
        {
            "before": ["C-d"],
            "after": ["C-d", "z", "z"]
        }
    ],
    "vim.camelCaseMotion.enable": true,
    "editor.guides.bracketPairsHorizontal": true,
    "editor.guides.indentation": false,
    "search.showLineNumbers": true,
    "editor.cursorSurroundingLines": 6,
    "editor.lineNumbers": "off",
    "editor.hideCursorInOverviewRuler": true,
    "workbench.layoutControl.enabled": false,
    "scm.diffDecorationsGutterWidth": 1,
    "scm.diffDecorationsGutterVisibility": "hover",
    "editor.fontLigatures": false,
    "editor.parameterHints.enabled": false,
    "editor.guides.highlightActiveBracketPair": false,
    "editor.foldingHighlight": false,
    "editor.occurrencesHighlight": false,
    "editor.matchBrackets": "never",
    "editor.fontSize": 16,
    "editor.cursorBlinking": "solid",
    "editor.renderLineHighlight": "none",
    "editor.scrollbar.horizontal": "hidden",
    "editor.smoothScrolling": true,
    "editor.selectionHighlight": false,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.lightbulb.enabled": false,
    "editor.wordBasedSuggestions": false,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    "C_Cpp.codeAnalysis.clangTidy.enabled": false,
    "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
        "bugprone-*",
        "clang-analyzer-*",
        "cppcoreguidelines-*"
    ],
    "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
        "cppcoreguidelines-macro-usage",
        "cppcoreguidelines-pro-type-vararg"
    ],
    "C_Cpp.intelliSenseEngine": "Tag Parser",
    "C_Cpp.autocomplete": "disabled",
    "editor.folding": false,
    "workbench.activityBar.visible": false
}
